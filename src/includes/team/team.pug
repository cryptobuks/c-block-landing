section.section.team
  div.container
    h2.section-title.team-title
      span.primary-text-fill Team
    p.team-subtitle The c-BLOCK Team combines passions from, Blockchain, Humanitarian Aid, Sports, industry expertise & a proven record in Finance, Marketing & Licensing.

    ul.team-members
      each member in members
        li.team-member
          div.team-member--photo
            img(src=member.img)
          h3.team-member--name
            span.primary-text-fill= member.name
          span.team-member--position= member.position
          ul.team-member--social
            each social in member.socials
              li.team-member--social-item
                a(href=social.link target="_blank" class="team-member--social-link")
                  i(class=social.icon)
          p.team-member--about= member.about



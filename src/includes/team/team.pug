  var members = [
    {
      img: './images/team-1.png',
      name: 'Tadii Tendayi',
      position: 'Founder & CEO',
      socials: [
        {
          link: 'https://www.linkedin.com/in/tadiitendayi/',
          icon: 'icon-linkedin',
        },
        {
          link: 'https://twitter.com/bitflexjack',
          icon: 'icon-twitter',
